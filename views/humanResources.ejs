<!DOCTYPE html>
<html>
  <head>
    <title>Corporate AI | Human Resources</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, user-scalable=no"
    />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <noscript
      ><link rel="stylesheet" href="/assets/css/noscript.css"
    /></noscript>
  </head>
  <body class="is-preload">
    <!-- Wrapper -->
    <div id="wrapper">
      <!-- Header -->
      <header id="header" class="alt">
        <a href="/dashboard" class="logo"><strong>Corporate AI</strong></a>
        <nav>
          <a href="#menu">Menu</a>
        </nav>
      </header>

      <!-- Menu -->
      <%- include('layouts/dashboardMenu.ejs') %>

      <!-- Main -->
      <div id="main" class="invoices page-img hr-img">
        <div class="invoices-container">
          <form class="meta-form">
            <h1>Human Resources</h1>
            <h2>Upload your invoices</h2>

            <label for="invoice">
              <input
                type="file"
                id="invoice"
                name="invoice"
                accept="application/pdf"
                multiple
              />
            </label>

            <h2>Ask a question</h2>
            <label for="title">
              <input type="text" name="title" class="question-input" />
              <button>Generate Response</button>
            </label>
          </form>

          <div class="description">
            <p>Your answer will be displayed here...</p>
          </div>
        </div>
      </div>

      <%- include('layouts/footer.ejs') %>
    </div>

    <!-- Scripts -->
    <%- include('layouts/scripts.ejs') %>
    <script src="/assets/js/humanResources.js"></script>
  </body>
</html>
