<!DOCTYPE html>
<html>
  <head>
    <title>Corporate AI | Login</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, user-scalable=no"
    />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <noscript
      ><link rel="stylesheet" href="/assets/css/noscript.css"
    /></noscript>
  </head>
  <body class="is-preload">
    <!-- Wrapper -->
    <div id="wrapper">
      <!-- Header -->
      <header id="header" class="alt">
        <a href="/" class="logo"><strong>Corporate AI</strong></a>
        <nav>
          <a href="#menu">Menu</a>
        </nav>
      </header>

      <!-- Menu -->
      <nav id="menu">
        <ul class="links">
          <li><a href="/">Home</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
        <ul class="actions stacked">
          <li><a href="/login" class="button fit">Log In</a></li>
        </ul>
        <ul class="actions stacked">
          <li><a href="/register" class="button fit">Register</a></li>
        </ul>
      </nav>

      <!-- Register -->
      <section>
        <form action="/login" method="post" class="auth">
          <div class="auth-container inner">
            <% if (message) { %>
            <div class="success-message"><%= message %></div>
            <% } %>
            <div class="fields">
              <div class="field half">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  autocomplete="off"
                  required
                />
              </div>
              <div class="field half">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  autocomplete="off"
                  required
                />
              </div>
            </div>
            <ul class="actions">
              <li>
                <input type="submit" value="Login" class="primary" />
              </li>
            </ul>
            <p>Don't have an account? <a href="/register">Register</a></p>
          </div>
        </form>
      </section>

      <%- include('layouts/footer.ejs') %>
    </div>

    <!-- Scripts -->
    <%- include('layouts/scripts.ejs') %>
  </body>
</html>
